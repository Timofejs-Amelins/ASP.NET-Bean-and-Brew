<!--use the CoffeeOrder model-->
@model Beanbrew.Models.CoffeeOrder

<!--set the title of this page to "Create"-->
@{
    ViewData["Title"] = "Create";
}

<!--tell user that this webform creates a coffee order-->
<h1>Create</h1>

<h4>CoffeeOrder</h4>

<!--split the form from the heading-->
<hr />

<!--this form takes up a third of the width of the page to provide spacing-->
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <!--some validation errors are displayed above the form-->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!--the coffee ID is a dropdown menu of different coffee IDs-->
            <div class="form-group">
                <label asp-for="CoffeeId" class="control-label"></label>
                <select asp-for="CoffeeId" class ="form-control" asp-items="ViewBag.CoffeeId"></select>
            </div>

            <!--the user also needs to select a customer ID for the order-->
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class ="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>

            <!--the Quantity must be entered to calculate the price-->
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <!--the Submit button makes coffee order and redirects the user-->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<!--if the user changes their mind they can always go back to the list-->
<div>
    <a asp-action="Index">Back to List</a>
</div>

<!--render this HTML in here-->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
