<!--make use of the Customer model to get all the Customer properties-->
@model Beanbrew.Models.Customer

@{
    ViewData["Title"] = "Create";
}

<!--heading to tell user this page inserts a new row-->
<h1>Create</h1>

<!--another heading to inform the user that they are working with Customers-->
<h4>Customer</h4>

<!--thematic break in the header to split the entry form from the heading-->
<hr />
<!--make row then column that makes up a third of the page's space for info-->
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <!--form validation error message to tell user data is invalid-->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!--Bootstrap form label, input and validation message-->
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <!--Bootstrap form label, input and validation message-->
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <!--Bootstrap form label, input and validation message-->
            <div class="form-group">
                <label asp-for="DOB" class="control-label"></label>
                <input asp-for="DOB" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>

            <!--Bootstrap button for spacing and to make the button nice-->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<!--this link takes the user to the Index page for seeing customer data-->
<div>
    <a asp-action="Index">Back to List</a>
</div>

<!--display HTML in _ValidationScriptsPartial.cshtml-->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
