<!--use the Customer model to create a customer-->
@model Beanbrew.Models.Customer

<html>
    <head>
        <!--style the search form and make the search form look beautiful-->
        <style>
            table {
                margin: auto;
                margin-top: 100px;
            }

            form {
                width: 500px;
                height: 300px;
                background-color: lightblue;
                border: 2px solid green;
                margin-left: 300px;
                margin-top: 150px;
                border: 2px solid red;
                border-radius: 0.8rem;
            }
        </style>
    </head>
<body>


<!--Customer heading teels people this searches customer data-->
<h4>Customer</h4>

<!--this hr provides spacing between the heading and the webform-->
<hr />

<!--this row takes up 33% of the body's width to make the page look good-->
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowSearchResults">
            <!--lay the input fields and the submission button in table-->
            <table>
                <tr>
            <td>

            <!--the search input field is a form-group for design-->
            <div class="form-group">
                <label for="searchString" class="control-label"></label>
                <input name="searchString" class="form-control" placeholder="search customer. . . . . " onfocus="this.placeholder=''" onblur="this.placeholder='search customer. . . . .'" style="float: left"/>
            </div>
            </td>

            <!--another cell takes the user to the page where they see data-->
            <td>
            <div class="form-group">
                <input type="image" src="~/img/Search.png" class="btn bg-light" style="float: right; border: 1px solid grey; border-radius: 0.5rem, width: 45px; box-shadow: 2px 2px 2px"/>
            </div>
                        </td>
                    </tr>
                </table>
        </form>
    </div>
</div>
</body>
</html>