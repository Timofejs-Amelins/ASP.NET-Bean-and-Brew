@model IEnumerable<Beanbrew.Models.BakedGoodsOrder>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hampers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BakedGoods)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hampers.HamperId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BakedGoods.BakedGoodsId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BakedGoodsOrderId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BakedGoodsOrderId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BakedGoodsOrderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
